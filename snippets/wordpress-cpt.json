	"WordPress | Creates a new Custom Post Type for Pages": {
		"prefix": "wpacptpag",
		"body": [
			"add_action( 'init', '${1:function prefix}_cpt_${2:post-type}' );",
			"/**",
			" * Register Post Type PAGE ${3:Name CPT}",
			" *",
			" * @return void",
			" **/",
			"function ${1:function-prefix}_cpt_${2:post-type}() {",
			"\t\\$labels = array(",
			"\t\t'name'               => __( '${3:Name CPT}', '${13:textdomain}' ),",
			"\t\t'singular_name'      => __( '${4:Singular Name CPT}', '${13:textdomain}' ),",
			"\t\t'add_new'            => __( '${5:Add New} ${4:Singular Name CPT}', '${13:textdomain}' ),",
			"\t\t'add_new_item'       => __( '${5:Add New} ${4:Singular Name CPT}', '${13:textdomain}' ),",
			"\t\t'edit_item'          => __( '${6:Edit} ${4:Singular Name CPT}', '${13:textdomain}' ),",
			"\t\t'new_item'           => __( '${7:New} ${4:Singular Name CPT}', '${13:textdomain}' ),",
			"\t\t'view_item'          => __( '${8:View} ${4:Singular Name CPT}', '${13:textdomain}' ),",
			"\t\t'search_items'       => __( '${9:Search} ${3:Name CPT}', '${13:textdomain}' ),",
			"\t\t'not_found'          => __( '${10:Not found} ${3:Name CPT}', '${13:textdomain}' ),",
			"\t\t'not_found_in_trash' => __( '${10:Not found} ${3:Name CPT} ${11:in trash} ', '${13:textdomain}' ),",
			"\t);",
			"\t\\$args   = array(",
			"\t\t'labels'             => \\$labels,",
			"\t\t'public'             => true,",
			"\t\t'publicly_queryable' => true,",
			"\t\t'show_in_rest'       => true, // Adds gutenberg support.",
			"\t\t'show_ui'            => true,",
			"\t\t'query_var'          => true,",
			"\t\t'rewrite'            => array(",
			"\t\t\t'slug'       => __( '${12:slug}', '${13:textdomain}' ),",
			"\t\t\t'with_front' => false,",
			"\t\t),",
			"\t\t'has_archive'        => false,",
			"\t\t'capability_type'    => 'page',",
			"\t\t'hierarchical'       => true,",
			"\t\t'menu_position'      => 5,",
			"\t\t'menu_icon'          => 'dashicons-admin-users', // https://developer.wordpress.org/resource/dashicons/.",
			"\t\t'supports'           => array( 'title', 'editor', 'thumbnail', 'excerpt', 'page-attributes' ),",
			"\t);",
			"\tregister_post_type( '${2:post-type}', \\$args );",
			"}"
		]
	},
