	"WordPress | Adds Custom columns in Admin Custom Post Type": {
		"prefix": "wpacptcol",
		"body": [
			"add_filter( 'manage_edit-${1:post_type}_columns', 'add_new_${1:post_type}_columns' );",
			"/**",
			" * Adds columns to post type ${1:post_type}",
			" *",
			" * @param array $marcas_columns Header of admin post type list.",
			" * @return array $marcas_columns New elements for header.",
			" */",
			"function add_new_${1:post_type}_columns(\\$${1:post_type}_columns) {",
			"\t\\$new_columns['cb']    = '<input type=\"checkbox\" />';",
			"\t\\$new_columns['title'] = 'Title';",
			"\t\\$new_columns['${2:variable}'] = '${3:column_title}';",
			"",
			"\t\\$new_columns['wpseo-score']             = __( 'SEO', 'wordpress-seo' );",
			"\t\\$new_columns['wpseo-score-readability'] = __( 'Readability', 'wordpress-seo' );",
			"\t\\$new_columns['wpseo-title']             = __( 'SEO Title', 'wordpress-seo' );",
			"\t\\$new_columns['wpseo-metadesc']          = __( 'Meta Desc.', 'wordpress-seo' );",
			"\t\\$new_columns['wpseo-focuskw']           = __( 'Focus KW', 'wordpress-seo' );",
			"",
			"\treturn \\$new_columns;",
			"}",
			"",
			"add_action( 'manage_${1:post_type}_posts_custom_column', 'manage_${1:post_type}_columns', 10, 2 );",
			"/**",
			" * Add columns content",
			" *",
			" * @param array \\$column_name Column name of actual.",
			" * @param array \\$id Post ID.",
			" * @return void",
			" */",
			"function manage_${1:post_type}_columns( \\$column_name, \\$id ) {",
			"\t\\$${2:variable} = get_post_meta( \\$id, '${2:variable}', true );",
			"",
			"\tswitch ( \\$column_name ) {",
			"\t\tcase '${2:variable}':",
			"\t\t\techo \\$${2:variable};",
			"\t\t\tbreak;",
			"",
			"\t\tdefault:",
			"\t\t\tbreak;",
			"\t} // end switch",
			"}"
		]
	},
	"WordPress | Register a taxonomy": {
		"prefix": "wpatax",
		"body": [
			"add_action( 'init', '${1:function prefix}_register_tax_${2:slug-taxonomy}', 0 );",
			"/**",
			" * Register Taxonomy ${3:name taxonomy plural}",
			" */",
			"function ${1:function prefix}_register_tax_${2:name-taxonomy}() {",
			"",
			"\t\\$labels = array(",
			"\t\t'name'          => '${3:name taxonomy plural}',",
			"\t\t'singular_name' => '${4:Taxonomy Name Singular}',",
			"\t\t'search_items'  => '${5:Search} ${4:Taxonomy Name Singular}',",
			"\t\t'all_items'     => '${6:All} ${3:name taxonomy plural}',",
			"\t\t'edit_item'     => '${7:Edit} ${4:Taxonomy Name Singular}',",
			"\t\t'update_item'   => '${8:Update} ${4:Taxonomy Name Singular}',",
			"\t\t'add_new_item'  => '${9:Add New} ${4:Taxonomy Name Singular}',",
			"\t\t'new_item_name' => '${9:Add New} ${4:Taxonomy Name Singular}',",
			"\t);",
			"",
			"\tregister_taxonomy(",
			"\t\t'${2:name-taxonomy}',",
			"\t\tarray(",
			"\t\t\t'${10:post-type}',",
			"\t\t),",
			"\t\tarray(",
			"\t\t\t'hierarchical'      => true,",
			"\t\t\t'labels'            => \\$labels,",
			"\t\t\t'show_ui'           => true,",
			"\t\t\t'show_in_rest'      => true,",
			"\t\t\t'show_admin_column' => true,",
			"\t\t\t'query_var'         => true,",
			"\t\t\t'rewrite'           => array(",
			"\t\t\t\t'slug' => '${11:slug-taxonomy}',",
			"\t\t\t),",
			"\t\t)",
			"\t);",
			"}"
		]
	}
}