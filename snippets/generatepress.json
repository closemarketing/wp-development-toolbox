{
	"GeneratePress | Filter Logo": {
		"prefix": "gpslo",
		"body": [
		  "add_filter( 'generate_logo', '${1:prefix}_custom_logo' );",
		  "/**",
		  " * Filters Logo in GeneratePress",
		  " *",
		  " * @param string $logo URL of Logo.",
		  " * @return string $logo",
		  " */",
		  "function ${1:prefix}_custom_logo( \\$logo ) {",
		  "return esc_url( get_stylesheet_directory_uri() ).'/images/logo.svg';",
		  "}"
		],
		"description": "GeneratePress | Filter Logo"
	},
	"Generate | Shows Featured image from WooCommerce to Page Hero": {
		"prefix": "gpswc",
		"body": [
			"// Generate WooCommerce URL.",
			"// from: https://gist.github.com/diggeddy/6478d0b724bf6c5d680e9f0dd25e720c",
			"add_filter(",
			"\t'generate_page_hero_background_image_url',",
			"\tfunction( $url ) {",
			"\t\tif ( ! function_exists( 'get_woocommerce_term_meta' ) ) {",
			"\t\t\treturn $url;",
			"\t\t}",
			"",
			"\t\tglobal $wp_query;",
			"\t\t$cat              = $wp_query->get_queried_object();",
			"\t\t$thumbnail_id     = get_woocommerce_term_meta( $cat->term_id, 'thumbnail_id', true );",
			"\t\t$background_image = wp_get_attachment_url( $thumbnail_id );",
			"",
			"\t\tif ( $background_image ) {",
			"\t\t\t$url = $background_image;",
			"\t\t}",
			"",
			"\t\treturn $url;",
			"\t}",
			");"
		],
		"description": "Generate | Shows Featured image from WooCommerce"
	},
	"GeneratePress | Register and shows a sidebar before footer": {
		"prefix": "gpspref",
		"body": [
			"/**",
			" * ## Register Prefooter",
			" * --------------------------- */",
			"",
			"// Register new sidebar.",
			"register_sidebar(",
			"\tarray(",
			"\t\t'id'          => 'prefooter',",
			"\t\t'name'        => '${2:Name of sidebar}',",
			"\t\t'description' => '${3:Description of sidebar}',",
			"\t\t'before_widget' => '<div id=\"%1\\$s\" class=\"widget %2\\$s\">',",
			"\t\t'after_widget'  => '</div>',",
			"\t)",
			");",
			"add_action( 'generate_before_footer', '${1:prefix}_do_sidebar_prefooter' );",
			"/**",
			" * Shows prefooter.",
			" *",
			" * @return void",
			" */",
			"function ${1:prefix}_do_sidebar_prefooter() {",
			"\t?>",
			"\t<section class=\"prefooter alignfull\">",
			"\t\t<div class=\"wrap\">",
			"\t\t\t<?php",
			"\t\t\tdynamic_sidebar( 'prefooter' );",
			"\t\t\t?>",
			"\t\t</div>",
			"\t</section>",
			"\t<?php",
			"}"
		],
		"description": "Genesis | Register and shows a sidebar before footer"
	},
	"GeneratePress | Adds local font": {
		"prefix": "gpafon",
		"body": [
			"/**",
			" * Adds Local Font in GeneratePress",
			" * Then you could donwload from Google Fonts using https://google-webfonts-helper.herokuapp.com/fonts",
			" */",
			"add_filter(",
			"\t'generate_typography_default_fonts',",
			"\tfunction( \\$fonts ) {",
			"\t\t$fonts[] = '${1:Font name}';",
			"",
			"\t\treturn \\$fonts;",
			"\t}",
			");"
		],
		"description": "GeneratePress | Adds local font"
	}
}