			"});",
			"*/",
			"",
			"//* In style.css",
			"/* Tabs content",
			"---------------------------------------------------------------------------------------------------- */",
			"",
			".entry-content ul.cmk-tabs {",
			"margin-left: 0;",
			"margin-bottom: 0;",
			"}",
			".${1:prefix}-tabs {",
			"\tmargin: 0 0 -2px 0;",
			"\toverflow: hidden;",
			"}",
			"",
			".${1:prefix}-tabs li {",
			"\tdisplay: inline-block;",
			"\tmargin: 0 4px 0 0;",
			"}",
			"",
			".${1:prefix}-tabs li a {",
			"\tdisplay: block;",
			"\tbackground: #f0f0f0;",
			"\tcolor: #555;",
			"\tfont-weight: 700;",
			"\tpadding: 10px 30px;",
			"\tborder: #eee solid 2px;",
			"\tborder-bottom: 0 none;",
			"\tborder-radius: 5px 5px 0 0;",
			"\ttext-decoration: none;",
			"\toutline: none;",
			"}",
			"",
			".${1:prefix}-tabs li a:hover {",
			"\tcolor: #888;",
			"}",
			"",
			".${1:prefix}-tabs li.ui-tabs-active a {",
