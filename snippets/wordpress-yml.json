{
	"WordPress GitHub Deploy to WordPress": {
		"prefix": "wpdgd",
		"body": [
		  "# Save this file in .github/workflows/deploy.yml",
		  "# Save in GitHub Secrets SVN_PASSWORD and SVN_USERNAME",
		  "name: Deploy to WordPress.org",
		  "on:",
		  "  push:",
		  "    tags:",
		  "    - \"*\"",
		  "jobs:",
		  "  tag:",
		  "    name: New tag",
		  "    runs-on: ubuntu-latest",
		  "    steps:",
		  "    - uses: actions/checkout@master",
		  "    - name: WordPress Plugin Deploy",
		  "      uses: 10up/action-wordpress-plugin-deploy@stable",
		  "      env:",
		  "        SVN_PASSWORD: \\${{ secrets.SVN_PASSWORD }}",
		  "        SVN_USERNAME: \\${{ secrets.SVN_USERNAME }}"
		],
		"description": "WordPress GitHub Deploy to WordPress"
	    },
	    "WordPress GitHub Deploy FTP Push": {
		"prefix": "wpdfp",
		"body": [
		  "on: push",
		  "name: ðŸš€ Deploy website on push",
		  "jobs:",
		  "  web-deploy:",
		  "    name: ðŸŽ‰ Deploy",
		  "    runs-on: ubuntu-latest",
		  "    steps:",
		  "    - name: ðŸšš Get latest code",
		  "      uses: actions/checkout@v2.3.2",
		  "",
		  "    - name: ðŸ“‚ Sync files",
		  "      uses: SamKirkland/FTP-Deploy-Action@4.0.0",
		  "      with:",
		  "        server: ${1:ftp}",
		  "        username: ${2:user-ftp}",
		  "        password: \\${{ secrets.password }}",
		  "        exclude: .git*",
		  "          - .git*/**",
		  "          -  **/.git*/**",
		  "          - node_modules/**",
		  "          - node_modules/**/*"
		],
		"description": "WordPress GitHub Deploy FTP Push"
	    }
}