	"CSS | Tweaks for Genesis CSS": {
		"prefix": "cssatw",
		"body": [
		  "/* # Common Classes",
		  "---------------------------------------------------------------------------------------------------- */",
		  ".text-center { text-align: center;}",
		  "",
		  ".home .entry {",
		  "\tpadding-top: 0;",
		  "}",
		  "",
		  "/* ## Dark",
		  "--------------------------------------------- */",
		  ".dark, ",
		  ".dark h1, ",
		  ".dark h2, ",
		  ".dark h3, ",
		  ".dark h4, ",
		  ".dark h5, ",
		  ".dark h6 { ",
		  "\tcolor: white; ",
		  "}",
		  "",
		  "/* ## Full-Width",
		  "--------------------------------------------- */",
		  ".full-width,",
		  ".alignfull {",
		  "\twidth: 100vw;",
		  "\tposition: relative;",
		  "\tleft: 50%;",
		  "\tright: 50%;",
		  "\tmargin-left: -50vw;",
		  "\tmargin-right: -50vw;",
		  "}",
		  "",
		  "/* # Plugins",
		  "---------------------------------------------------------------------------------------------------- */",
		  "",
		  "/* ## Woocommerce",
		  "--------------------------------------------- */",
		  ".entry-content ul.payment_methods > li {",
		  "    list-style: none;",
		  "}",
		  "#billing_company_field {",
		  "    width: 100%;",
		  "}",
		  "",
		  "/* ## Gravity Forms",
		  "--------------------------------------------- */",
		  "",
		  ".gfield.small {",
		  "\tfont-size: 11px;",
		  "}",
		  ".gfield select {",
		  "\theight: 40px;",
		  "}",
		  "",
		  ".gform_wrapper .suscripcion .gfield_label {",
		  "\tdisplay: none !important;",
		  "}",
		  ".gform_wrapper .suscripcion .ginput_container {",
		  "\tdisplay: inline-block;",
		  "\tfloat: left;",
		  "\twidth: 70%;",
		  "\tbackground-color: transparent;",
		  "\tfont-size: 20px;",
		  "\theight: 5rem;",
		  "}",
		  ".gform_wrapper .suscripcion ul.gform_fields li.gfield {",
		  "\tpadding-right: 0;",
		  "}",
		  ".gform_wrapper .suscripcion .top_label .ginput_container {",
		  "\tmargin-top: 6px;",
		  "}",
		  ".gform_wrapper .suscripcion .gform_footer {clear: none;width: 30%;float: right;margin-top: -3rem;}",
		  "",
		  ".gform_wrapper .suscripcion .gform_button{",
		  "\tfloat: right;",
		  "\twidth: 30%;",
		  "\theight: 4.4rem;",
		  "\tmargin-right: 0;",
		  "\tpadding: 5px;",
		  "}"
		],
		"description": "CSS | Tweaks for Genesis CSS"
	},

