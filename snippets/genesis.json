		  "add_filter( 'genesis_site_layout', 'child_do_layout' );",
		  "/**",
		  " * Force full width layout",
		  " *",
		  " * @return \\$opt Layout option.",
		  " */",
		  "function child_do_layout() {",
		  "\tif ( class_exists( 'WooCommerce' ) && ( is_home() || is_front_page() || is_page() || is_archive() || is_product() || is_shop() || is_cart() || is_category() ) ) {",
		  "\t\t// Modify the conditions to apply the layout to here.",
		  "\t\t\\$opt = 'full-width-content';",
		  "\t\tremove_action( 'woocommerce_sidebar', 'woocommerce_get_sidebar' );",
		  "\t\treturn \\$opt;",
		  "\t} elseif (is_home() || is_front_page() || is_page() || is_archive() ) {",
		  "\t\t// Modify the conditions to apply the layout to here.",
		  "\t\t\\$opt = 'full-width-content';",
		  "\t\treturn \\$opt;",
		  "\t} elseif ( is_single() ) {",
		  "\t\t// Modify the conditions to apply the layout to here",
		  "\t\t\\$opt = 'content-sidebar';",
		  "\t\treturn \\$opt;",
		  "\t}",
		  "}"
		],
