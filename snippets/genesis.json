	"Genesis | Adds custom Yoast social icons html elements to the main menu": {
		"prefix": "genssm",
		"body": [
			"/**",
			" * Adds custom Yoast social icons html elements to the main menu.",
			" *",
			" * @param array \\$items Array menu items.",
			" * @param array \\$args Array arguments for menu.",
			" * @return array \\$items",
			" */",
			"function cmk_menu_add_social ( \\$items, \\$args ) {",
			"\t\\$wpseo_social = get_option('wpseo_social'); ",
			"\tif (\\$args->theme_location == 'primary') {",
			"\t\t\\$menu_html = '';",
			"\t\tif(\\$wpseo_social['facebook_site'])",
			"\t\t\t\\$menu_html.= '<li class=\"menu-item menu-item-social menu-item-fb\"><a href=\"'.\\$wpseo_social['facebook_site'].'\"><i class=\"icon icon-facebook\" rel=\"nofollow\"></i></a></li>';",
			"\t\tif(\\$wpseo_social['twitter_site'])",
			"\t\t\t\\$menu_html.= '<li class=\"menu-item menu-item-social menu-item-tw\"><a href=\"https://twitter.com/'.\\$wpseo_social['twitter_site'].'\"><i class=\"icon icon-twitter\" rel=\"nofollow\"></i></a></li>';",
			"\t\tif(\\$wpseo_social['linkedin_url'])",
			"\t\t\t\\$menu_html.= '<li class=\"menu-item menu-item-social menu-item-lk\"><a href=\"'.\\$wpseo_social['linkedin_url'].'\"><i class=\"icon icon-linkedin\" rel=\"nofollow\"></i></a></li>';",
			"\t\tif(\\$wpseo_social['instagram_url'])",
			"\t\t\t\\$menu_html.= '<li class=\"menu-item menu-item-social menu-item-in\"><a href=\"'.\\$wpseo_social['instagram_url'].'\"><i class=\"icon icon-instagram\" rel=\"nofollow\"></i></a></li>';",
			"\t\tif(\\$wpseo_social['google_plus_url'])",
			"\t\t\t\\$menu_html.= '<li class=\"menu-item menu-item-social menu-item-gp\"><a href=\"'.\\$wpseo_social['google_plus_url'].'\"><i class=\"icon icon-google-plus\" rel=\"nofollow\"></i></a></li>';",
			"\t\tif(\\$wpseo_social['youtube_url'])",
			"\t\t\t\\$menu_html.= '<li class=\"menu-item menu-item-social menu-item-yt\"><a href=\"'.\\$wpseo_social['youtube_url'].'\"><i class=\"icon icon-youtube\" rel=\"nofollow\"></i></a></li>';",
			"\t\tif(\\$wpseo_social['pinterest_url'])",
			"\t\t\t\\$menu_html.= '<li class=\"menu-item menu-item-social menu-item-pt\"><a href=\"'.\\$wpseo_social['pinterest_url'].'\"><i class=\"icon icon-pinterest\" rel=\"nofollow\"></i></a></li>';",
			"\t\tif(\\$tripadvisor)",
			"\t\t\t\\$menu_html.= '<li class=\"menu-item menu-item-social menu-item-tp\"><a href=\"'.\\$tripadvisor.'\"><i class=\"icon icon-tripadvisor\" rel=\"nofollow\"></i></a></li>';",
			"\t\t\\$items = \\$items.\\$menu_html;",
			"\t}",
			"\treturn \\$items;",
			"}",
			"add_filter( 'wp_nav_menu_items', 'cmk_menu_add_social', 10, 2 );"
		]
	},
	"Genesis | Adds Hamburger menu animation": {
		"prefix": "genshm",
		"body": [
		  "// Replace function from Genesis Sample",
		  "function genesis_sample_responsive_menu_settings() {",
		  "",
		  "\t\\$settings = array(",
		  "\t\t'mainMenu'          => '<span class=\"hamburger-box\"><span class=\"hamburger-inner\"></span></span>',",
		  "\t\t'menuIconClass'     => 'hamburger hamburger--slider',",
		  "\t\t'subMenu'           => __( 'Submenu', 'genesis-sample' ),",
		  "\t\t'subMenuIconsClass' => 'dashicons-before dashicons-arrow-down-alt2',",
		  "\t\t'menuClasses'       => array(",
		  "\t\t\t'combine' => array(",
		  "\t\t\t\t'.nav-primary',",
		  "\t\t\t\t'.nav-header',",
		  "\t\t\t),",
		  "\t\t\t'others'  => array(),",
		  "\t\t),",
		  "\t);",
		  "  ",
		  "\treturn \\$settings;",
		  "  ",
		  "}",
		  "//* in Style",
		  "/* CSS for Animated Hamburger Menu Icon */",
		  "  ",
		  "@media only screen and (max-width: 1023px) {",
		  "\t// Hamburgers  ",
		  "\t.hamburger {",
		  "\t\tpadding: 15px 15px;",
		  "\t\tdisplay: inline-block;",
		  "\t\tcursor: pointer;",
		  "\t\ttransition-property: opacity, filter;",
		  "\t\ttransition-duration: 0.15s;",
		  "\t\ttransition-timing-function: linear;",
		  "\t\tfont: inherit;",
		  "\t\tcolor: inherit;",
		  "\t\ttext-transform: uppercase;",
		  "\t\tbackground-color: transparent;",
		  "\t\tborder: 0;",
		  "\t\tmargin: 0;",
		  "\t\toverflow: visible; ",
		  "\t\tfloat: right;",
		  "\t}",
		  "",
		  "\t.hamburger:hover {",
		  "\t\topacity: 0.7; ",
		  "\t}",
		  "",
		  "\t.hamburger-box {",
		  "\t\twidth: 40px;",
		  "\t\theight: 24px;",
		  "\t\tdisplay: inline-block;",
		  "\t\tposition: relative; ",
		  "\t}",
		  "",
		  "\t.hamburger-inner { ",
		  "\t\tdisplay: block; ",
		  "\t\ttop: 50%; ",
		  "\t\tmargin-top: -2px; ",
		  "\t}",
		  "",
		  "\t.hamburger-inner, ",
		  "\t.hamburger-inner::before, ",
		  "\t.hamburger-inner::after {",
		  "\t\twidth: 40px;",
		  "\t\theight: 4px;",
		  "\t\tbackground-color: #000;",
		  "\t\tborder-radius: 4px;",
		  "\t\tposition: absolute;",
		  "\t\ttransition-property: transform;",
		  "\t\ttransition-duration: 0.15s;",
		  "\t\ttransition-timing-function: ease; ",
		  "\t}",
		  "\t",
		  "\t.hamburger-inner::before, ",
		  "\t.hamburger-inner::after { ",
		  "\t\tcontent: \"\"; ",
		  "\t\tdisplay: block;",
		  "\t}",
		  "  ",
		  "\t.hamburger-inner::before {",
		  "\t\ttop: -10px; ",
		  "\t}",
		  "\t.hamburger-inner::after {",
		  "\t\tbottom: -10px; ",
		  "\t}",
		  "  ",
		  "\t// Slider ",
		  "\t// Note: If you want to use any other menu icon, search for it and copy appropriate css code from this resource: https://github.com/jonsuh/hamburgers/blob/master/dist/hamburgers.css",
		  "  ",
		  "\t.hamburger--slider .hamburger-inner { ",
		  "\t\ttop: 2px; ",
		  "\t}",
		  "\t.hamburger--slider .hamburger-inner::before {",
		  "\t\ttop: 10px;",
		  "\t\ttransition-property: transform, opacity;",
		  "\t\ttransition-timing-function: ease;",
		  "\t\ttransition-duration: 0.15s; ",
		  "\t}",
		  "  ",
		  "\t.hamburger--slider .hamburger-inner::after {",
		  "\t\ttop: 20px; ",
		  "\t}",
		  "",
		  "\t.hamburger--slider.activated .hamburger-inner {",
		  "\t\ttransform: translate3d(0, 10px, 0) rotate(45deg);",
		  "\t}",
		  "",
		  "\t.hamburger--slider.activated .hamburger-inner::before {",
		  "\t\ttransform: rotate(-45deg) translate3d(-5.71429px, -6px, 0);",
		  "\t\topacity: 0; ",
		  "\t}",
		  "",
		  "\t.hamburger--slider.activated .hamburger-inner::after {",
		  "\t\ttransform: translate3d(0, -20px, 0) rotate(-90deg); ",
		  "\t}",
		  "",
		  "}",
		  "  ",
		  "/* Optional Code - Remove if Not Necessary */",
		  "@media only screen and (min-width: 401px)",
		  "and (orientation : portrait) { ",
		  "\t.menu-toggle {",
		  "\t\ttop: -10px !important;",
		  "\t} ",
		  "}"
		],
		"description": "Genesis | Adds Hamburger menu animation"
	},
