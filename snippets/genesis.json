	"Genesis | Adds submenu parent/child Pages": {
		"prefix": "gensmp",
		"body": [
		  "//* Adds submenu.",
		  "add_action( 'genesis_after_header', '${1:prefix}_submenu', 20 );",
		  "/**",
		  " * Adds submenu for child pages",
		  " *",
		  " * @return void",
		  " */",
		  "function ${1:prefix}_submenu() {",
		  "\tglobal \\$post;",
		  "\t\\$current_post_type = get_post_type( \\$post );",
		  "\t\\$post_parent       = \\$post->post_parent;",
		  "\t\\$tmp_post          = \\$post;",
		  "",
		  "\tif ( 0 === \\$post_parent ) {",
		  "\t\t\\$args = array(",
		  "\t\t\t'order'          => 'ASC',",
		  "\t\t\t'posts_per_page' => -1,",
		  "\t\t\t'orderby'        => 'menu_order',",
		  "\t\t\t'post_type'      => \\$current_post_type,",
		  "\t\t\t'post_parent'    => \\$post->ID,",
		  "\t\t);",
		  "\t} else {",
		  "\t\t\\$args = array(",
		  "\t\t\t'order'          => 'ASC',",
		  "\t\t\t'posts_per_page' => -1,",
		  "\t\t\t'orderby'        => 'menu_order',",
		  "\t\t\t'post_type'      => \\$current_post_type,",
		  "\t\t\t'post_parent'    => \\$post_parent,",
		  "\t\t);",
		  "\t}",
		  "",
		  "\t\\$myposts = get_posts( \\$args );",
		  "\t\\$parent = wp_get_post_parent_id( \\$post->ID );",
		  "",
		  "\tif ( \\$myposts ) {",
		  "\t\techo '<div class=\"submenu-childpages full-width\">';",
		  "\t\techo '<div class=\"wrap\">';",
		  "\t\techo '<ul class=\"menuchild\">';",
		  "\t\t\\$parent_id = wp_get_post_parent_id( get_the_ID() );",
		  "\t\tif ( 0 !== \\$parent_id ) {",
		  "\t\t\techo '<li class=\"menu-item\"><a href=\"' . get_the_permalink( \\$parent_id ) . '\">';",
		  "\t\t\techo get_the_title( \\$parent_id ) . '</a></li>';",
		  "\t\t}",
		  "\t\tforeach ( \\$myposts as \\$post ) {",
		  "\t\t\tsetup_postdata( \\$post );",
		  "\t\t\techo '<li class=\"menu-item';",
		  "\t\t\tif ( \\$tmp_post->ID === \\$post->ID ) {",
		  "\t\t\t\techo ' active';",
		  "\t\t\t}",
		  "\t\t\techo '\"><a href=\"' . get_the_permalink() . '\">' . get_the_title() . '</a></li>';",
		  "\t\t}",
		  "\t\techo '</ul>';",
		  "\t\techo '</div></div>';",
		  "\t\twp_reset_postdata();",
		  "\t}",
		  "}",
		  "",
		  "//* In Style.css",
		  "/* Submenu for child pages",
		  "--------------------------------------------- */",
		  ".submenu-childpages {",
		  "\tbackground-color: black;",
		  "}",
		  ".submenu-childpages .menuchild {",
		  "\tdisplay: flex;",
		  "\tjustify-content: center;",
		  "\tflex-wrap: wrap;",
		  "\tposition: relative;",
		  "\tz-index: 20;",
		  "}",
		  "",
		  ".submenu-childpages .menuchild .menu-item{",
		  "\ttext-align:center;",
		  "\tpadding: 2rem 3rem;",
		  "\ttext-transform: uppercase;",
		  "}",
		  "",
		  ".submenu-childpages .menuchild .menu-item:hover a,",
		  ".submenu-childpages .menuchild .menu-item.active a {",
		  "\tcolor: #1c5ea8;",
		  "}",
		  "",
		  ".submenu-childpages .menuchild .menu-item a {",
		  "\tcolor: white;",
		  "}"
		],
		"description": "Genesis | Adds submenu parent/child Pages"
	},
	"Genesis | Forces full width layout with conditionals and WooCommerce support": {
